/* 树洞帖子的样式参数 */
.total{
  margin-left: 5rpx;
  margin-right: 5rpx;
}
/* 最外层：树洞帖子 */
.post{
  width: 96%;
  padding: 15rpx;  /* 间距 */
  border-radius: 5rpx;
  background-color: #ffffff00;
  border-radius: 20rpx;  /* 圆角的大小 */
  margin-right: 5rpx;

}
.post1{
  width: 98%;
  padding: 10rpx;  /* 间距 */
  border-radius: 5rpx;
  background-color: #ffffff;
  border-radius: 20rpx;  /* 圆角的大小 */
  box-shadow: 2rpx 2rpx 6rpx 6rpx #dfebeb;
  margin-right: 5rpx;
} 
/* 次外层：可链接详情的导航框 包含Id, time,post_text */
.post2 {
  height: 99.9%;
  width: 99.9%;
  justify-content: left;
  align-items: top;
  border-radius: 20rpx; 
  margin-right: 5rpx;
  padding-left: 10rpx;
}
/* 第一栏：id,time */
.one{
  display:flex;
  flex-direction: row;
  justify-content:space-between ;
  line-height:13px;
  margin:10rpx;
}
.name{
  font-size: 15px;
  font-family:"楷体";
  flex-direction: column;
  padding-top: 30rpx;
}
.time{
  padding-right: 30rpx;
  color: #9ca0a0;
  font-size: 12px;
}
/* 第二栏：post_text */
.potxt{
  height: 100%;
  padding-left: 15rpx;
  padding-right: 5rpx;
  padding-top: 25rpx;
  font-size: 18px;
  font-family:"楷体";
  line-height: 50rpx;
  word-break: break-all;
  word-wrap: break-word;
  overflow: hidden;
  justify-content:center;
  align-items:center;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
} 
/* 第三栏：操作列表 */
.optext{
  font-size: 18px;
  font-family:"楷体";
  line-height:30rpx;
  color: #97a3a3;
}
.option{
  display: flex;
  padding-top: 10rpx;
  /* flex-direction:row-reverse; */
  align-items:centers;
  flex-direction: row;
  justify-content:space-between ;
  margin:15rpx;
}
.option1{
  display: flex;
  /* flex-direction:row-reverse; */
  align-items:center;
  flex-direction: row;
}
.option2{
  padding-right: 10rpx;
}
.img-button{
  padding: 0;
  border: none;
}
.tapimg1{  
  width: 55rpx;
  height: 55rpx;
}
.tapbtn1[plain]{
  padding: 0;
  border:none;   
  width: 55rpx;
  height: 55rpx;
}
.inp{
  font-family: 楷体;
  width: 95%;
  padding-left: 15rpx;
}
.btn1{
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
}
