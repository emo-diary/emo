.container{
  width: 100%;
  height:100%;
}
.monster-wrap{
    position:fixed;
    display: flex;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color:rgba(255, 255, 255, 0);
    z-index:8888;
  
}

.frame_wrap {
  width: var(--width);
  height: var(--height);
  animation: frames calc(var(--duration) * 1s) steps(var(--count)) var(--playNumber);
  background-position: 0 0;
  background-size: calc(var(--width) * var(--count)) var(--height);
  position: fixed;
    bottom: 30rpx;
    left: 20rpx;
    display: flex;
    z-index: 999;
}

@keyframes frames {
  from {
    background-position-x: 0;
  }
  to {
    background-position-x: calc(var(--width) * var(--count));
  }
}

.monster {
  width: 397rpx;
  height: 270rpx;
  position: fixed;
    bottom: 30rpx;
    left: 20rpx;
    display: flex;
    z-index: 999;
}

